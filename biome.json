{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true,
    "ignore": ["**/*.vue"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "globals": ["React"]
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "./apps/web/public/sw.js",
      "./public/sw.js",
      "./apps/web/src/pages/doc/*.mdx",
      "**/*.d.ts",
      "src/api/index.ts",
      "**/dist/**/*",
      "**/.output/**/*",
      "**/public/*.js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["*.svelte", "*.astro", "*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
